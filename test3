    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        scaleDragging = false
    end
end)
UserInputService.InputChanged:Connect(function(input)
    if scaleDragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        local trackPos = ScaleTrack.AbsolutePosition.X
        local trackSize = ScaleTrack.AbsoluteSize.X
        local relative = math.clamp((input.Position.X - trackPos) / trackSize, 0, 1)
        local scale = math.floor((relative * (5 - 0.1) + 0.1) * 10 + 0.5) / 10
        state.scale = scale
        ScaleLabel.Text = "Scale: " .. string.format("%.1f", scale) .. "x"
        ScaleFill.Size = UDim2.new(relative, 0, 1, 0)
        ScaleKnob.Position = UDim2.new(relative, 0, 0.5, 0)
    end
end)

-- SPAWN BUTTON
