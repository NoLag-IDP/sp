for i, option in ipairs(dropdownOptions) do
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, 0, 0, 30)
    btn.BackgroundColor3 = Color3.fromRGB(40, 40, 47)
    btn.BorderSizePixel = 0
    btn.Text = option
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 12
    btn.TextColor3 = Color3.fromRGB(210, 210, 220)
    btn.TextXAlignment = Enum.TextXAlignment.Left
    btn.LayoutOrder = i
    btn.ZIndex = 11
    btn.Parent = DropList
    local bp = Instance.new("UIPadding", btn)
    bp.PaddingLeft = UDim.new(0, 10)

    btn.MouseEnter:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(55, 55, 65)
    end)
    btn.MouseLeave:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(40, 40, 47)
    end)
    btn.MouseButton1Click:Connect(function()
        DropButton.Text = option
        DropList.Visible = false
        DropArrow.Text = "▼"
        local entry = petdata[i]
        state.pet = entry.name
        state.rarity = entry.rarity
    end)
end

local dropOpen = false
DropButton.MouseButton1Click:Connect(function()
    dropOpen = not dropOpen
    DropList.Visible = dropOpen
    DropArrow.Text = dropOpen and "▲" or "▼"
end)

